# Redirect all requests to public folder
RewriteEngine On

# If the request is for the root directory, redirect to /public/
RewriteRule ^$ /public/ [R=301,L]

# If the request is not already for the public folder, redirect there
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.*)$ /public/$1 [R=301,L]

# Handle requests within the public folder
RewriteCond %{REQUEST_URI} ^/public/
RewriteRule ^public/(.*)$ /public/$1 [L]